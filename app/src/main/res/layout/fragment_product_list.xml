<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    tools:context="com.ortho.medicare.medicareortho.fragments.ProductListFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/frg_product_recycler_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.ortho.medicare.medicareortho.customviews.CustomTextView
        android:id="@+id/frg_product_txt_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/no_categories_found" />
</FrameLayout>
