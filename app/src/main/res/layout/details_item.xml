<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_05"
    android:orientation="horizontal">

    <com.ortho.medicare.medicareortho.customviews.CustomTextView
        android:id="@+id/item_product_tv_sr_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical" />

    <com.ortho.medicare.medicareortho.customviews.CustomTextView
        android:id="@+id/item_product_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical" />

    <com.ortho.medicare.medicareortho.customviews.CustomTextView
        android:id="@+id/item_product_tv_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical" />

    <com.ortho.medicare.medicareortho.customviews.CustomTextView
        android:id="@+id/item_product_tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical" />

</LinearLayout>